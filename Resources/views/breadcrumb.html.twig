<nav aria-label="breadcrumb">
    <ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
        <li class="breadcrumb-item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
            <a href="/" itemscope itemtype="https://schema.org/Thing" itemprop="item" href="/" itemid="/"><span class="d-none" itemprop="name">Accueil</span><i class="fa fa-home"></i></a>
            <meta itemprop="position" content="1" />
        </li>
        {% for item in breadcrumb.items %}
            {% if loop.last %}
                <li class="breadcrumb-item active" aria-current="page" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <span itemscope itemtype="https://schema.org/Thing" itemprop="item" itemid="{{ item.url }}">
                        <span class="d-md-none" itemprop="name">{{ loop.index < 2 ? item.label : item.label|u.truncate(20, '...') }}</span>
                        <span class="d-none d-md-inline" itemprop="name">{{ item.label }}</span>
                    </span>
                    <meta itemprop="position" content="{{ loop.index + 1 }}" />
                </li>
            {% else %}
                <li class="breadcrumb-item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a href="{{ item.url }}" itemscope itemtype="https://schema.org/Thing" itemprop="item" itemid="{{ item.url }}">
                        <span itemprop="name">{{ item.label }}</span>
                    </a>
                    <meta itemprop="position" content="{{ loop.index + 1 }}" />
                </li>
            {% endif %}
        {% endfor %}
    </ol>
</nav>
